<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".buyFragment">



    <LinearLayout
        android:id="@+id/buylayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured properties"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/viewall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textSize="15dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="#2C5AE3"
                />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="8"
                        android:rowCount="1"
                        android:visibility="visible"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_marginRight="10dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            app:cardElevation="5dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:background="@drawable/x"
                                >

                                <androidx.cardview.widget.CardView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    app:cardCornerRadius="30dp"
                                    android:backgroundTint="#8B595656"
                                    android:layout_alignParentRight="true"
                                    >
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/heart_svgrepo_com"
                                        android:layout_gravity="center"
                                        />

                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_gravity="bottom"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Om Sree heights"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="by_om_sree_builders_amp_dev"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rs:1500000"
                                    android:textColor="@color/black"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_marginRight="45dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            app:cardElevation="5dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:background="@drawable/h"
                                >

                                <androidx.cardview.widget.CardView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    app:cardCornerRadius="30dp"
                                    android:backgroundTint="#8B595656"
                                    android:layout_alignParentRight="true"
                                    >
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/heart_svgrepo_com"
                                        android:layout_gravity="center"
                                        />

                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_gravity="bottom"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Om Sree heights"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="by_om_sree_builders_amp_dev"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rs:1700000"
                                    android:textColor="@color/black"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore near by"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/viewall2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
