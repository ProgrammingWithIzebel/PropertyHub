                                android:layout_gravity="bottom"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Om Sree heights"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="by_om_sree_builders_amp_dev"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rs:1800000"
                                    android:textColor="@color/black"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_marginRight="45dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            app:cardElevation="5dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:background="@drawable/v"
                                >

                                <androidx.cardview.widget.CardView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    app:cardCornerRadius="30dp"
                                    android:backgroundTint="#8B595656"
                                    android:layout_alignParentRight="true"
                                    >
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/heart_svgrepo_com"
                                        android:layout_gravity="center"
                                        />

                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="15dp"
                                android:paddingBottom="5dp"
                                android:layout_gravity="bottom"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Om Sree heights"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="by_om_sree_builders_amp_dev"
                                    android:textColor="@color/black"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rs:1300000"
                                    android:textColor="@color/black"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

</FrameLayout>