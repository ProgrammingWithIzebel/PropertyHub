<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetail"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/black"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_keyboard_arrow_left_24"
                            android:layout_marginRight="268dp"
                            />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        >
                        <EditText
                            android:layout_width="265dp"
                            android:layout_height="wrap_content"
                            android:hint="search"
                            android:drawableRight="@drawable/baseline_search_24"
                            android:background="@drawable/edittext"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="10dp"
                            android:layout_marginRight="30dp"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:cardCornerRadius="40dp"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_filter_list_24"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </Toolbar>

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/t" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/x" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/a" />

            </ViewFlipper>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#54D8CFCF"
                    >
                    <TextView
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:text="Gray Structure House For Sale In Kirana View Phase 1 "
                        />
                    <TextView
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="15dp"
                        android:text="Faisalabad Road, Sargodha, Punjab "
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#54D8CFCF"
                    >
                    <TextView
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:textSize="20dp"
                        android:text="Beautiful Gray Structure House with A+ construction and best architecture is available for sale In kirana View Phase 1. Location is nearest to mosque and Park. Road size is 30 feet. Electricity and Gas is available. House can be furnished According to clients demand. Both Floors can be rented Out separately. Garage for bid car is available "
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <com.google.android.material.button.MaterialButton
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Chat with us?"
                app:cornerRadius="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#50C878"
                android:layout_marginBottom="5dp"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Find us"
                app:cornerRadius="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="#50C878"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>